{
    "name": "yonis-savary/sharp-project",
    "description": "Plain project to get started with the Sharp framework",
    "type": "project",
    "require": {
        "yonis-savary/sharp": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('sharp.php') || copy('sharp.example.php', 'sharp.php');\""
        ]
    },
    "license": "MIT",
    "minimum-stability": "stable"
}
